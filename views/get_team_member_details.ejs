  <div class="container my-8">
    <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-400">
            <thead class="text-xs uppercase bg-gray-700 text-gray-400">
                <tr>
                    <th scope="col" class="py-3 px-6">
                        ID
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Name
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Email ID
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Branch Name
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Phone
                    </th>
                    <th scope="col" class="py-3 px-6">
                        <span class="">Action</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% teammemberdetails.forEach((row,index) => { %>
                 
                    <tr class="bg-gray-800 border-gray-700 hover:bg-gray-600">
                        <th scope="row" class="py-4 px-6 font-medium whitespace-nowrap text-white">
                           <%= index+1 %> 
                        </th>
                        <td class="py-4 px-6">
                            <%= row.name1 %> 
                        </td>
                        <td class="py-4 px-6">
                            <%= row.emailid1 %> 
                        </td>
                        <td class="py-4 px-6">
                           <%= row.branch1 %> 
                        </td>
                        <td class="py-4 px-6">
                         <%= row.phone1 %> 
                        </td>
                        <td class="py-2 px-4 text-right">
                            <a href="/edit_team_member/<%-id %>/<%-row.id %>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline mx-2">Edit</a>
                            <a href="/delete_team_member/<%-id %>/<%-row.id %>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline mx-2">Delete</a>
                        </td>
                    </tr>
                   
                <% }) %>
               
            </tbody>
        </table>
    </div>
    </div> 
         
        <% if(teammemberdetails.length>0 && teammemberdetails.length<5) { %>
          <div class="flex justify-center items-center my-5">
            <button class="btn btn-primary "><a class="text-white no-underline" href="/add_team_member/<%- id  %> ">Add team details</a></button>
        </div> 
              <% } else if(teammemberdetails.length==0) { %>
           
             
              
                  
                  <div class="flex justify-center items-center">
                    <a href="/add_team_member/<%- id  %>" class="outline-none">
                    <button class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded">
                        Add Team Member Details
                    
                      </button>
                      </a>
            </div>
              <% }else{ %>
                <div class="flex justify-center items-center">
                    <a href="/get_problem_statement/<%- id  %>" class="outline-none">
                    <button class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded">
                        Get your problem Statement details
                    
                      </button>
                      </a>
            </div>
                <% } %>  
